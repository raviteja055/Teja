var express =require('express');
var querystring=require('querystring');
var fs = require('fs');
var app = express();

var bodyParser = require('body-parser')
app.use(bodyParser.json());
app.use(bodyParser.urlencoded({extended:true}));

app.use(function(req,res,next){
var data ="coming on :" + new Date().getTime()

next();

})
//

app.get('/',function(requset,response){
var readdata= fs.readFileSync('data.html','utf-8')
response.send(readdata);
});

app.post('/register',function(requset,response){
fs.writeFile("output.txt",querystring.stringify(requset.body),function(err,data){
if(err){
console.log(err)
}else
console.log(data)
})
response.send("sucess")

})

app.get('*',function(request,response){
response.send("page not found");
})
app.listen(8000)
console.log("server is listen on :8000")

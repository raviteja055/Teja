const readline = require('readline');

const rl = readline.createInterface({
input: process.stdin,
output: process.stdout
});

rl.question('Please enter the first number : ', (answer1) => {
rl.question('Please enter the second number : ', (answer2) => {
var sum = (+answer1) + (+answer2);
var product = (+answer1) * (+answer2);
console.log('The sum of above two numbers is' +sum);
console.log('The product of above two numbers is' +product);
rl.close();
});
});

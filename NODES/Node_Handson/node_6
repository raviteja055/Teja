function findPrimeNumber(n){
  //declare a counter and a variable of the latest prime number
  var c = 1, nPrime = 2, i = 3; 
  console.log('Prime no ==',c,nPrime);
  function isPrime(k){ 
    for( var j = 2; j < k; j++){
      if( k % j === 0 ){ return false; } 
    }
    return true;
  }
  
  while(c < n){ 
    if( isPrime(i) ) {  
      c++; 
      nPrime = i; 
    }
    i++; 
  } 
   
  return nPrime;
}

console.log(findPrimeNumber(10001));
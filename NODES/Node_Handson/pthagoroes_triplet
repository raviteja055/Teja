function pythagoreanTriplet(){
    var sum = 1000;
    var a;
    for (a = 1; a <= sum/3; a++)
    {
        var b;
        for (b = a + 1; b <= sum/2; b++)
        {
            var c = sum - a - b;
            if( a*a + b*b == c*c ){
                console.log((a*b*c));
            }
               
        }
    }
}

pythagoreanTriplet();

                  